pipeline {
    agent any
    triggers {
        triggers { upstream(upstreamProjects: 'Stock Packaging', threshold: hudson.model.Result.SUCCESS) }
    }
    stages {
        stage('Pull') {
            steps {
                script {
                    docker.withServer('unix:///var/run/docker.sock') {
                        def image = docker.image('pklumar/stock:latest')
                        image.pull()
                    }
                }
            }
        }
        stage('Run') {
            steps {
                script {
                    docker.withServer('unix:///var/run/docker.sock') {
                        def image = docker.image('pklumar/stock:latest')
                        image.run()
                    }
                }
            }
        }
    }
}
